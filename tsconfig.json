{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@/*": ["./src/*"],
      "ui": ["./src/components/ui/index.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "resources/**/**", "dist"]
}
